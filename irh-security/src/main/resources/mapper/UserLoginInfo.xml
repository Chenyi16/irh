<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.imuster.auth.dao.UserLoginInfoDao">

	<!-- user_login_info 所有查询列 -->
	<sql id="QUERY_COLUMN_LIST">
		<![CDATA[
            id,
            user_id AS userId,
            login_name AS loginName,
            password,
            type,
            state,
            create_time AS createTime,
            update_time AS updateTime 
		]]>
	</sql>

	<!-- user_login_info 查询列来源表-->
	<sql id="QUERY_FROM_TABLE"><![CDATA[FROM user_login_info]]></sql>
	
	<!-- 全部条件(更多功能可以通过queryData扩展实现)  -->
	<sql id="QUERY_WHERE_CLAUSE">
		<where>
            <if test="id != null and id != ''"><![CDATA[AND id = #{id}]]></if>
            <if test="userId != null and userId != ''"><![CDATA[AND user_id = #{userId}]]></if>
            <if test="loginName != null and loginName != ''"><![CDATA[AND login_name = #{loginName}]]></if>
            <if test="password != null and password != ''"><![CDATA[AND password = #{password}]]></if>
            <if test="type != null and type != ''"><![CDATA[AND type = #{type}]]></if>
            <if test="state != null and state != ''"><![CDATA[AND state = #{state}]]></if>
            <if test="createTime != null and createTime != ''"><![CDATA[AND create_time = #{createTime}]]></if>
            <if test="updateTime != null and updateTime != ''"><![CDATA[AND update_time = #{updateTime}]]></if> 
		</where>
	</sql>
	
	<!-- 智能排序与分页 -->
	<sql id="QUERY_ORDER_LIMIT_CONDTION">
		<if test="orderField != null and orderField != '' and orderFieldType != null and orderFieldType != ''"><![CDATA[ORDER BY ${orderField} ${orderFieldType}]]></if>
		<if test="startIndex != null and startIndex &gt;= 0 and pageSize != null and pageSize &gt; 0"><![CDATA[LIMIT #{startIndex},#{pageSize}]]></if>
	</sql>

	<!-- 更新列字段,只要不为NULL则更新,除开主键列 -->
	<sql id="UPDATE_COLUMN_SET">
		<set>
			<if test="userId != null"><![CDATA[user_id = #{userId},]]></if>
			<if test="loginName != null"><![CDATA[login_name = #{loginName},]]></if>
			<if test="password != null"><![CDATA[password = #{password},]]></if>
			<if test="type != null"><![CDATA[type = #{type},]]></if>
			<if test="state != null"><![CDATA[state = #{state},]]></if>
			<if test="createTime != null"><![CDATA[create_time = #{createTime},]]></if>
			<if test="updateTime != null"><![CDATA[update_time = #{updateTime},]]></if>
		</set>
	</sql>

	<!-- 插入app记录 -->
	<insert id="insertEntry" parameterType="userLoginInfo" >
		<![CDATA[
			INSERT INTO user_login_info
				(
                id, 
                user_id, 
                login_name, 
                password, 
                type, 
                state, 
                create_time, 
                update_time 
				)
			VALUES
				(
                #{id}, 
                #{userId}, 
                #{loginName}, 
                #{password}, 
                #{type}, 
                #{state}, 
                #{createTime}, 
                #{updateTime} 
				)
		]]>
	</insert>
	
	<!-- 返回插入的编号,在事务开启状态下有效 -->
	<select id="lastSequence" resultType="long"><![CDATA[SELECT LAST_INSERT_ID() AS id]]></select>

	<!-- 删除记录,主键IN(array) -->
	<delete id="deleteByArrayKey" parameterType="java.lang.reflect.Array" >
		<![CDATA[DELETE FROM user_login_info WHERE id IN]]>
		<foreach collection="array" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</delete>

	<!-- 删除,通过条件 -->
	<delete id="deleteByCondtion" parameterType="userLoginInfo" >
		<![CDATA[DELETE FROM user_login_info]]>
		<include refid="QUERY_WHERE_CLAUSE"/>
	</delete>

	<!-- 修改记录通过主键 -->
	<update id="updateByKey" parameterType="userLoginInfo" >
		<![CDATA[UPDATE user_login_info]]>
		<include refid="UPDATE_COLUMN_SET"/>
		<![CDATA[WHERE id = #{id}]]>
	</update>

	<!-- 查询,通过主键IN(array) -->
	<select id="selectEntryArray" parameterType="java.lang.reflect.Array" resultType="userLoginInfo">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<![CDATA[WHERE id IN]]>
		<foreach collection="array" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</select>

	<!-- 查询,通过条件 -->
	<select id="selectEntryList" parameterType="userLoginInfo" resultType="userLoginInfo">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
		<include refid="QUERY_ORDER_LIMIT_CONDTION"/>
	</select>

	<!-- 总数查询,通过条件 -->
	<select id="selectEntryListCount" parameterType="userLoginInfo" resultType="int">
		<![CDATA[SELECT COUNT(id) AS dataCount]]>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
	</select>
	
	<!-- 其它SQL语句 -->
	
</mapper>