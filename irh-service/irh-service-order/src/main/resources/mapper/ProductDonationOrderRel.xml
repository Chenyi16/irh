<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.imuster.order.provider.dao.ProductDonationOrderRelDao">

	<!-- product_donation_order_rel 所有查询列 -->
	<sql id="QUERY_COLUMN_LIST">
		<![CDATA[
            id,
            order_id AS orderId,
            donation_apply_id AS donationApplyId,
            operation_user_id AS operationUserId,
            create_time AS createTime,
            update_time AS updateTime 
		]]>
	</sql>

	<!-- product_donation_order_rel 查询列来源表-->
	<sql id="QUERY_FROM_TABLE"><![CDATA[FROM product_donation_order_rel]]></sql>
	
	<!-- 全部条件(更多功能可以通过queryData扩展实现)  -->
	<sql id="QUERY_WHERE_CLAUSE">
		<where>
            <if test="id != null and id != ''"><![CDATA[AND id = #{id}]]></if>
            <if test="orderId != null and orderId != ''"><![CDATA[AND order_id = #{orderId}]]></if>
            <if test="donationApplyId != null and donationApplyId != ''"><![CDATA[AND donation_apply_id = #{donationApplyId}]]></if>
            <if test="operationUserId != null and operationUserId != ''"><![CDATA[AND operation_user_id = #{operationUserId}]]></if>
            <if test="createTime != null and createTime != ''"><![CDATA[AND create_time = #{createTime}]]></if>
            <if test="updateTime != null and updateTime != ''"><![CDATA[AND update_time = #{updateTime}]]></if> 
		</where>
	</sql>
	
	<!-- 智能排序与分页 -->
	<sql id="QUERY_ORDER_LIMIT_CONDTION">
		<if test="orderField != null and orderField != '' and orderFieldType != null and orderFieldType != ''"><![CDATA[ORDER BY ${orderField} ${orderFieldType}]]></if>
		<if test="startIndex != null and startIndex &gt;= 0 and pageSize != null and pageSize &gt; 0"><![CDATA[LIMIT #{startIndex},#{pageSize}]]></if>
	</sql>

	<!-- 更新列字段,只要不为NULL则更新,除开主键列 -->
	<sql id="UPDATE_COLUMN_SET">
		<set>
			<if test="orderId != null"><![CDATA[order_id = #{orderId},]]></if>
			<if test="donationApplyId != null"><![CDATA[donation_apply_id = #{donationApplyId},]]></if>
			<if test="operationUserId != null"><![CDATA[operation_user_id = #{operationUserId},]]></if>
			<if test="createTime != null"><![CDATA[create_time = #{createTime},]]></if>
			<if test="updateTime != null"><![CDATA[update_time = #{updateTime},]]></if>
		</set>
	</sql>

	<!-- 插入app记录 -->
	<insert id="insertEntry" parameterType="productDonationOrderRel" >
		<![CDATA[
			INSERT INTO product_donation_order_rel
				(
                id, 
                order_id, 
                donation_apply_id, 
                operation_user_id, 
                create_time, 
                update_time 
				)
			VALUES
				(
                #{id}, 
                #{orderId}, 
                #{donationApplyId}, 
                #{operationUserId}, 
                #{createTime}, 
                #{updateTime} 
				)
		]]>
	</insert>
	
	<!-- 返回插入的编号,在事务开启状态下有效 -->
	<select id="lastSequence" resultType="long"><![CDATA[SELECT LAST_INSERT_ID() AS id]]></select>

	<!-- 删除记录,主键IN(array) -->
	<delete id="deleteByArrayKey" parameterType="java.lang.reflect.Array" >
		<![CDATA[DELETE FROM product_donation_order_rel WHERE id IN]]>
		<foreach collection="array" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</delete>

	<!-- 删除,通过条件 -->
	<delete id="deleteByCondtion" parameterType="productDonationOrderRel" >
		<![CDATA[DELETE FROM product_donation_order_rel]]>
		<include refid="QUERY_WHERE_CLAUSE"/>
	</delete>

	<!-- 修改记录通过主键 -->
	<update id="updateByKey" parameterType="productDonationOrderRel" >
		<![CDATA[UPDATE product_donation_order_rel]]>
		<include refid="UPDATE_COLUMN_SET"/>
		<![CDATA[WHERE id = #{id}]]>
	</update>

	<!-- 查询,通过主键IN(array) -->
	<select id="selectEntryArray" parameterType="java.lang.reflect.Array" resultType="productDonationOrderRel">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<![CDATA[WHERE id IN]]>
		<foreach collection="array" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</select>

	<!-- 查询,通过条件 -->
	<select id="selectEntryList" parameterType="productDonationOrderRel" resultType="productDonationOrderRel">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
		<include refid="QUERY_ORDER_LIMIT_CONDTION"/>
	</select>

	<!-- 总数查询,通过条件 -->
	<select id="selectEntryListCount" parameterType="productDonationOrderRel" resultType="int">
		<![CDATA[SELECT COUNT(id) AS dataCount]]>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
	</select>
	
	<!-- 其它SQL语句 -->
	
	<select id="selectOrderListByFinishApplyId" parameterType="long" resultType="orderInfo">
		SELECT
			saler_nickname AS salerNickname,
			saler_id AS salerId,
			finish_time AS finishTime
		FROM
			order_info
		WHERE
		id IN (
		SELECT
			id
		FROM
			product_donation_order_rel
		WHERE
		donation_apply_id = #{applyId}
	)
	</select>
	
</mapper>