<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.imuster.life.provider.dao.ErrandInfoDao">

	<!-- errand_info 所有查询列 -->
	<sql id="QUERY_COLUMN_LIST">
		<![CDATA[
            id,
            publisher_id AS publisherId,
            content,
            requirement,
            money,
            create_time AS createTime,
            update_time AS updateTime,
            state 
		]]>
	</sql>

	<!-- errand_info 查询列来源表-->
	<sql id="QUERY_FROM_TABLE"><![CDATA[FROM errand_info]]></sql>
	
	<!-- 全部条件(更多功能可以通过queryData扩展实现)  -->
	<sql id="QUERY_WHERE_CLAUSE">
		<where>
            <if test="id != null and id != ''"><![CDATA[AND id = #{id}]]></if>
            <if test="publisherId != null and publisherId != ''"><![CDATA[AND publisher_id = #{publisherId}]]></if>
            <if test="content != null and content != ''"><![CDATA[AND content = #{content}]]></if>
            <if test="requirement != null and requirement != ''"><![CDATA[AND requirement = #{requirement}]]></if>
            <if test="money != null and money != ''"><![CDATA[AND money = #{money}]]></if>
            <if test="createTime != null and createTime != ''"><![CDATA[AND create_time = #{createTime}]]></if>
            <if test="updateTime != null and updateTime != ''"><![CDATA[AND update_time = #{updateTime}]]></if>
            <if test="state != null and state != ''"><![CDATA[AND state = #{state}]]></if> 
            <if test="state == null or state == ''"><![CDATA[AND state != 1]]></if>
		</where>
	</sql>
	
	<!-- 智能排序与分页 -->
	<sql id="QUERY_ORDER_LIMIT_CONDTION">
		<if test="orderField != null and orderField != '' and orderFieldType != null and orderFieldType != ''"><![CDATA[ORDER BY ${orderField} ${orderFieldType}]]></if>
		<if test="startIndex != null and startIndex &gt;= 0 and pageSize != null and pageSize &gt; 0"><![CDATA[LIMIT #{startIndex},#{pageSize}]]></if>
	</sql>

	<!-- 更新列字段,只要不为NULL则更新,除开主键列 -->
	<sql id="UPDATE_COLUMN_SET">
		<set>
			<if test="publisherId != null"><![CDATA[publisher_id = #{publisherId},]]></if>
			<if test="content != null"><![CDATA[content = #{content},]]></if>
			<if test="requirement != null"><![CDATA[requirement = #{requirement},]]></if>
			<if test="money != null"><![CDATA[money = #{money},]]></if>
			<if test="createTime != null"><![CDATA[create_time = #{createTime},]]></if>
			<if test="updateTime != null"><![CDATA[update_time = #{updateTime},]]></if>
			<if test="state != null"><![CDATA[state = #{state},]]></if>
		</set>
	</sql>

	<!-- 插入app记录 -->
	<insert id="insertEntry" parameterType="errandInfo" >
		<![CDATA[
			INSERT INTO errand_info
				(
                id, 
                publisher_id, 
                content,
                requirement, 
                money, 
                create_time, 
                update_time, 
                state 
				)
			VALUES
				(
                #{id}, 
                #{publisherId}, 
                #{content},
                #{requirement}, 
                #{money}, 
                #{createTime}, 
                #{updateTime}, 
                #{state} 
				)
		]]>
	</insert>
	
	<!-- 返回插入的编号,在事务开启状态下有效 -->
	<select id="lastSequence" resultType="long"><![CDATA[SELECT LAST_INSERT_ID() AS id]]></select>

	<!-- 删除记录,主键IN(array) -->
	<delete id="deleteByArrayKey" parameterType="java.lang.reflect.Array" >
		<![CDATA[DELETE FROM errand_info WHERE id IN]]>
		<foreach collection="array" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</delete>

	<!-- 删除,通过条件 -->
	<delete id="deleteByCondtion" parameterType="errandInfo" >
		<![CDATA[DELETE FROM errand_info]]>
		<include refid="QUERY_WHERE_CLAUSE"/>
	</delete>

	<!-- 修改记录通过主键 -->
	<update id="updateByKey" parameterType="errandInfo" >
		<![CDATA[UPDATE errand_info]]>
		<include refid="UPDATE_COLUMN_SET"/>
		<![CDATA[WHERE id = #{id}]]>
	</update>

	<!-- 查询,通过主键IN(array) -->
	<select id="selectEntryArray" parameterType="java.lang.reflect.Array" resultType="errandInfo">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<![CDATA[WHERE id IN]]>
		<foreach collection="array" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</select>

	<!-- 查询,通过条件 -->
	<select id="selectEntryList" parameterType="errandInfo" resultType="errandInfo">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
		<include refid="QUERY_ORDER_LIMIT_CONDTION"/>
	</select>

	<!-- 总数查询,通过条件 -->
	<select id="selectEntryListCount" parameterType="errandInfo" resultType="int">
		<![CDATA[SELECT COUNT(id) AS dataCount]]>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
	</select>

	<!-- 其它SQL语句 -->
	<select id="selectList" parameterType="errandInfo" resultType="errandInfo">
		<![CDATA[SELECT id, content, money, create_time AS createTime, state, requirement]]>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
		AND state != 1
		<include refid="QUERY_ORDER_LIMIT_CONDTION"/>
	</select>
</mapper>